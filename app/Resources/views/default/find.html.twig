{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('user_new') }}">Create a new user</a>
    {% if app.user %}
        <a href="logout">Logout</a>
    {% else %}
        <a href="{{ path('login') }}">Login</a>
    {% endif %}
    <a href="{{ path('recipe_new') }}">New recipe</a>
    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input type="submit" value="Search"/>
    {{ form_end(form) }}
    {% for recipe in recipes %}
        <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Title</th>
            <th>Summary</th>
            <th>State</th>
            <th>Vote</th>
            <th>Ingredient</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td><a href="{{ path('recipe_show', { 'id': recipe.id }) }}">{{ recipe.id }}</a></td>
            <td>{{ recipe.user.username }}</td>
            <td>{{ recipe.title }}</td>
            <td>{{ recipe.summary }}</td>
            <td>{{ recipe.state }}</td>
            <td>{{ recipe.vote }}</td>
            <td>{{ recipe.ingredient }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('recipe_show', { 'id': recipe.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('basket_add', { 'id': recipe.id }) }}">add to basket</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
{% endblock %}