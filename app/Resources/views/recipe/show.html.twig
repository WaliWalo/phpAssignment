{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>User</th>
                <td>{{ recipe.user.username }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ recipe.summary }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ recipe.state }}</td>
            </tr>
            <tr>
                {% if user != recipe.user %}
                    <th>Vote</th>
                    <td>{{ recipe.vote }}</td>
                    <th>
                        {{ form_start(formVote) }}
                    </th>
                    <td>
                    <button type="submit" value="vote">Vote!</button>

                        {{ form_end(formVote) }}
                    </td>
                    {% else %}
                        <th>Vote</th>
                        <td>{{ recipe.vote }}</td>
                {% endif %}
            </tr>
            <tr>
                <th>Ingredient</th>
                <td>{{ recipe.ingredient }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('homePage') }}">Back to the list</a>
        </li>
        {% if user == recipe.user %}
        <li>
            <a href="{{ path('recipe_edit', { 'id': recipe.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        {% endif %}
    </ul>
{% endblock %}
